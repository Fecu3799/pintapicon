<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nombre_predio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Predio"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_estado_predio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_cantidad_canchas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad de Canchas: "
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_tipos_canchas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipos de Canchas: "
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/btn_editar_predio"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/btn_ver_detalles_predio"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/ic_reports" />
    </LinearLayout>
</LinearLayout>