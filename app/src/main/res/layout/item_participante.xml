<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp"
    android:background="@drawable/border_rect_white">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Participante"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_posicion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PosiciÃ³n"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/tv_monto_pagado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pagado: $0.00"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_eliminar_participante"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_delete_white"
        android:layout_gravity="center"
        android:layout_marginStart="3dp" />

</LinearLayout>